{
  "$defs": {
    "Project": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "favorite": {
          "type": "boolean"
        },
        "size": {
          "type": "string",
          "enum": ["xs", "s", "m", "l", "xl"]
        },
        "programming_language": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Java",
              "Kotlin",
              "Python",
              "JavaScript",
              "TypeScript",
              "HTML",
              "C",
              "C++",
              "Flutter/Dart",
              "GoLang",
              "MatLab",
              "R",
              "Android",
              "CI/CD"
            ]
          }
        },
        "when": {
          "$ref": "#/$defs/TimeRange"
        },
        "where": {
          "type": "string"
        },
        "source_code": {
          "type": "string",
          "format": "uri"
        },
        "project_page": {
          "type": "string",
          "format": "uri"
        },
        "article": {
          "type": "string"
        },
        "demo": {
          "type": "string",
          "format": "uri"
        },
        "videos": {
          "type": "array",
          "items": {
            "description": "Youtube Video ID",
            "type": "string"
          }
        },
        "publication": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["title", "description", "size", "favorite", "when"]
    },
    "TimeRange": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "format": "date"
        },
        "end": {
          "type": "string",
          "format": "date"
        }
      }
    }
  },
  "type": "object",
  "title": "Projects",
  "properties": {
    "projects": {
      "items": {
        "$ref": "#/$defs/Project"
      },
      "type": "array"
    }
  }
}
